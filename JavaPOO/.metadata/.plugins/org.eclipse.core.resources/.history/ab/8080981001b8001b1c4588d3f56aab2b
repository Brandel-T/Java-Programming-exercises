	public static void main(String[] args) {
		String str = "Als Trennzeichen zwischen zwei Worten sollen Leerzeichen, Ausrufezeichen, Punkt und Komma verwendet werden.";
		String trenner = " .,'";
		StringTokenizer stoken = new StringTokenizer(str, trenner, true);
		while (stoken.hasMoreTokens()) {
			System.out.println(stoken.nextToken());
		}
		
	}
	
